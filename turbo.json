{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": [
    "BOT_TOKEN",
    "CHANNEL_ID",
    "ROLE_ID",
    "OPENROUTER_API_KEY",
    "QSTASH_TOKEN",
    "QSTASH_CURRENT_SIGNING_KEY",
    "QSTASH_NEXT_SIGNING_KEY",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "DARWIN_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "check": {
      "dependsOn": ["^check"]
    }
  }
}
